# ============================================
# CONFIGURAÇÃO DO AMBIENTE - CINEPREMIUM
# ============================================
# Copie este arquivo para .env e preencha com suas credenciais reais
# NUNCA commite o arquivo .env no Git!

# --------------------------------------------
# AMBIENTE
# --------------------------------------------
# Defina como 'production' em produção ou 'development' em desenvolvimento
NODE_ENV=development

# Porta do servidor (padrão: 3000)
PORT=3000

# --------------------------------------------
# SEGURANÇA - SESSÕES
# --------------------------------------------
# Chave secreta para assinar cookies de sessão (gere uma string aleatória forte)
# Exemplo de geração: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=sua_chave_secreta_aqui_troque_por_uma_string_aleatoria_forte

# --------------------------------------------
# AUTENTICAÇÃO - ADMIN
# --------------------------------------------
# Credenciais do administrador
ADMIN_USER=admin

# IMPORTANTE: Use hash bcrypt para maior segurança
# Para gerar o hash, execute: npm run hash-password sua_senha_aqui
# Exemplo de hash bcrypt: $2b$10$abcdefghijklmnopqrstuvwxyz0123456789
ADMIN_PASS=sua_senha_forte_aqui_ou_hash_bcrypt

# --------------------------------------------
# BANCO DE DADOS - MYSQL
# --------------------------------------------
DB_NAME=nome_do_banco
DB_USER=usuario_do_banco
DB_PASS=senha_do_banco
DB_HOST=localhost

# --------------------------------------------
# PAGAMENTOS - ONDAPAY
# --------------------------------------------
# Credenciais da API OndaPay
ONDAPAY_CLIENT_ID=seu_client_id_aqui
ONDAPAY_CLIENT_SECRET=seu_client_secret_aqui

# URL do webhook (deve ser acessível publicamente)
WEBHOOK_URL=https://seu-dominio.com/ondapay-webhook

# CRÍTICO: Secret para verificar assinatura do webhook (OBRIGATÓRIO EM PRODUÇÃO)
# Este secret é usado para validar que webhooks vêm realmente da OndaPay
# Obtenha este valor no painel da OndaPay
ONDAPAY_WEBHOOK_SECRET=seu_webhook_secret_aqui

# --------------------------------------------
# FIREBASE - CLOUD MESSAGING
# --------------------------------------------
# Credenciais do Firebase Admin SDK em Base64
# Para gerar:
# 1. Baixe o arquivo JSON das credenciais do Firebase Console
# 2. Converta para Base64: node -e "console.log(Buffer.from(require('fs').readFileSync('firebase-credentials.json')).toString('base64'))"
FIREBASE_CREDENTIALS_BASE64=suas_credenciais_firebase_em_base64_aqui

# Configuração do Firebase (visível no frontend)
FIREBASE_API_KEY=sua_api_key_aqui
FIREBASE_AUTH_DOMAIN=seu-projeto.firebaseapp.com
FIREBASE_PROJECT_ID=seu-projeto-id
FIREBASE_STORAGE_BUCKET=seu-projeto.firebasestorage.app
FIREBASE_MESSAGING_SENDER_ID=123456789012
FIREBASE_APP_ID=1:123456789012:web:abc123def456
FIREBASE_VAPID_KEY=sua_vapid_key_aqui

# --------------------------------------------
# NOTAS DE SEGURANÇA
# --------------------------------------------
# - Nunca compartilhe este arquivo com valores reais
# - Use senhas fortes e únicas
# - Em produção, considere usar um gerenciador de segredos (AWS Secrets Manager, HashiCorp Vault, etc.)
# - Rotacione suas credenciais periodicamente
# - O arquivo .env está no .gitignore e NÃO deve ser commitado

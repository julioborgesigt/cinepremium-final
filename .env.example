# ===========================================
# Configurações do Servidor
# ===========================================
NODE_ENV=production
PORT=3000

# ===========================================
# Banco de Dados MySQL
# ===========================================
DB_HOST=localhost
DB_NAME=cinepremium
DB_USER=root
DB_PASS=sua_senha_aqui

# ===========================================
# Autenticação Admin
# ===========================================
ADMIN_USER=admin
# Gere o hash com: npm run hash-password sua_senha_aqui
ADMIN_PASS=$2b$10$hash_bcrypt_aqui

# ===========================================
# Sessões
# ===========================================
# Gere com: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=seu_secret_de_64_caracteres_aqui
COOKIE_DOMAIN=seudominio.com

# ===========================================
# Redis (Opcional em dev, recomendado em prod)
# ===========================================
USE_REDIS=false
REDIS_URL=redis://localhost:6379

# ===========================================
# CORS - Origens Permitidas (obrigatório em produção)
# ===========================================
ALLOWED_ORIGINS=https://seusite.com,https://www.seusite.com

# ===========================================
# GATEWAY DE PAGAMENTO: OndaPay
# ===========================================
ONDAPAY_CLIENT_ID=seu_client_id_ondapay
ONDAPAY_CLIENT_SECRET=seu_client_secret_ondapay
# ONDAPAY_WEBHOOK_SECRET=opcional_se_ondapay_fornecer

# ===========================================
# GATEWAY DE PAGAMENTO: AbacatePay
# ===========================================
ABACATEPAY_API_KEY=seu_api_key_abacatepay
# Obtido no painel da AbacatePay em: Configurações > Chaves de API

# ===========================================
# GATEWAY DE PAGAMENTO: CIABRA
# ===========================================
CIABRA_PUBLIC_KEY=sua_chave_publica_ciabra
CIABRA_PRIVATE_KEY=sua_chave_privada_ciabra
# Obtido no painel da CIABRA em: Perfil do Usuário > Integração

# ===========================================
# Webhook URLs (ajuste para seu domínio)
# ===========================================
WEBHOOK_URL=https://seusite.com/ondapay-webhook
ABACATEPAY_WEBHOOK_URL=https://seusite.com/abacatepay-webhook
CIABRA_WEBHOOK_URL=https://seusite.com/ciabra-webhook

# ===========================================
# Firebase (Notificações Push)
# ===========================================
FIREBASE_CREDENTIALS_BASE64=sua_credencial_base64_aqui
FIREBASE_API_KEY=sua_api_key
FIREBASE_AUTH_DOMAIN=seu-projeto.firebaseapp.com
FIREBASE_PROJECT_ID=seu-projeto
FIREBASE_STORAGE_BUCKET=seu-projeto.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abc123
FIREBASE_VAPID_KEY=sua_vapid_key
